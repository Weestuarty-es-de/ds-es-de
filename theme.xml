    <view name="system,gamelist">
   <systemstatus name="menustatus">
        <pos>0.99 0.0075</pos>
        <origin>1 0</origin>
        <color>${textColor}</color>
            <fontPath>./ds.ttf</fontPath>
        <entries>all</entries>
        </systemstatus>
        <clock name="menuclock">
            <fontSize>0.04</fontSize>
            <rotation>0</rotation>
